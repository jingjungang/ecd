<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title2"
    android:fitsSystemWindows="true"
    android:gravity="center" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:background="@color/title_bar"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="3.0dip"
            android:layout_weight="1"
            android:gravity="left|center" >

            <ImageView
                android:id="@+id/img_back"
                style="@style/btn_back"
                android:layout_marginLeft="35.0dip"
                android:background="@drawable/selector_return"
                android:clickable="true" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_line1"
            style="@style/mTitle_style1"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="病历" />

        <Button
            android:id="@+id/add_bl"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:textColor="@color/white_color"
            android:textSize="25.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/index"
        android:layout_width="fill_parent"
        android:layout_height="3.0dip"
        android:layout_below="@+id/title"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="10.0dip"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0" />

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center"
            android:visibility="invisible" >

            <ImageView
                android:id="@+id/img1"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/circle" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="10.0dip"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img2"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/circle"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="10.0dip"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img3"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/circle"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="10.0dip"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img4"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/circle"
                android:visibility="invisible" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="10.0dip"
            android:layout_weight="0.5" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img5"
                android:layout_width="30.0dip"
                android:layout_height="30.0dip"
                android:background="@drawable/circle"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:background="@color/transparent" />

        <ImageView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_margin="3.0dip"
            android:layout_weight="1.0"
            android:background="@color/transparent" />
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="wrap_content"
        android:layout_height="1.0dip"
        android:layout_below="@+id/title"
        android:background="@color/blue_color"
        android:padding="1.0dip" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/index"
        android:layout_toRightOf="@+id/lv1"
        android:background="@color/white_color"
        android:gravity="top"
        android:orientation="vertical"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="5.0dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="就诊卡号："
                    android:textColor="@color/black_color" />

                <Spinner
                    android:id="@+id/card_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.5"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="45dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <EditText
                    android:id="@+id/card"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:focusable="true"
                    android:gravity="center"
                    android:inputType="number" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:text="※"
                    android:textColor="@color/red_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:text="真实姓名："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/rname"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:maxLength="5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.7"
                    android:gravity="right|center"
                    android:text="※"
                    android:textColor="@color/red_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.3"
                    android:gravity="right|center"
                    android:text="性别："
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/sex"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/r0"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingRight="90dp"
                        android:text="男"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:paddingRight="90dp"
                        android:text="女"
                        android:textColor="@color/black_color" />
                </RadioGroup>

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:text="身份证："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/birthday"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_none"
                    android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:gravity="center"
                    android:maxLength="18"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:text="※"
                    android:textColor="@color/red_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:text="手机号码："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/phone"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/black_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:text="电子邮箱："
                    android:textColor="@color/black_color" />

                <com.ukang.clinicaltrial.view.Emial_EditText
                    android:id="@+id/email"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:text="通讯地址："
                    android:textColor="@color/black_color" />

                <Spinner
                    android:id="@+id/province"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="85dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <Spinner
                    android:id="@+id/city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="85dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <Spinner
                    android:id="@+id/country"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="50dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <EditText
                    android:id="@+id/street"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:maxLength="15"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="出生日期："
                    android:textColor="@color/black_color" />

                <com.ukang.clinicaltrial.view.Mdate
                    android:id="@+id/birthdate"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:paddingLeft="50dp" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:text="婚姻状况："
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/marriage"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingRight="90dp"
                        android:text="已婚"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/r3"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:gravity="center"
                        android:paddingRight="90dp"
                        android:text="未婚"
                        android:textColor="@color/black_color" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="身高："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/height"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColor="@color/black_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="cm"
                    android:textColor="@color/black_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="right|center"
                    android:text="体重："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/weight"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColor="@color/black_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:text="kg"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_margin="5dp"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="所在地区："
                    android:textColor="@color/black_color" />

                <Spinner
                    android:id="@+id/province1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="85dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <Spinner
                    android:id="@+id/city1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="85dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <Spinner
                    android:id="@+id/country1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/bg_none"
                    android:entries="@array/province"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="65dp"
                    android:paddingTop="5dp"
                    android:textSize="@dimen/ZlbrecordSize" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:gravity="right|center"
                    android:text="年龄："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/age"
                    style="@style/input_box"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.25"
                    android:background="@drawable/bg_none"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="3"
                    android:textColor="@color/black_color" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.25"
                    android:gravity="center"
                    android:text="岁"
                    android:textColor="@color/black_color" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20.0dip" >

                <Button
                    android:id="@+id/submit"
                    style="@style/submit_visible"
                    android:layout_width="140.0dip"
                    android:layout_height="65.0dip"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:text="提交" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>