<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff8f8f8"
    android:fitsSystemWindows="true"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="5dip" >

    <View
        style="@style/line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_none"
        android:minHeight="70.0dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/table_head"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="静息心电图结果："
            android:textColor="@color/black_color" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1.0dip"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="3" >

            <RadioButton
                android:id="@+id/frg_12_1a"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:checked="true"
                android:gravity="center"
                android:text="正常"
                android:textColor="@color/black_color" />

            <RadioButton
                android:id="@+id/frg_12_1b"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="异常"
                android:textColor="@color/black_color" />
        </RadioGroup>

        <EditText
            android:id="@+id/frg_12_2a"
            style="@style/table_head"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="3.0"
            android:gravity="left|center"
            android:inputType="text"
            android:maxLength="500"
            android:textColor="@color/black_color"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        style="@style/line_color_1"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_none"
        android:minHeight="70.0dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/table_head"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="检查日期："
            android:textColor="@color/black_color" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:minHeight="70.0dip"
            android:orientation="horizontal" >

            <com.ukang.clinicaltrial.view.Mdate
                android:id="@+id/ctime"
                style="@style/table_head"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="3.0"
                android:gravity="center"
                android:textColor="@color/black_color" />
        </LinearLayout>

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/black_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_none"
        android:minHeight="70.0dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/table_head"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="上传附件：" />

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/add_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:minHeight="40dp"
                android:text=" +添加图片 "
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:textColor="@color/black_color" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_none"
        android:minHeight="140.0dip"
        android:orientation="horizontal" >

        <GridView
            android:id="@+id/camera_gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="9"
            android:scrollbars="none"
            android:verticalSpacing="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_none"
        android:minHeight="70.0dip"
        android:orientation="horizontal" >

        <TextView
            style="@style/table_head"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:gravity="left"
            android:text="注:若心电图异常,主要观察ST-T改变、病理性Q波、各种心律失常、QT/QTc间期" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70.0dip" >

        <Button
            android:id="@+id/submit"
            android:layout_width="140.0dip"
            android:layout_height="70.0dip"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="20.0dip"
            android:background="@drawable/selector_btn"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/white_color" />
    </RelativeLayout>

</LinearLayout>