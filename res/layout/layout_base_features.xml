<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f8f8f8"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff8f8f8"
        android:gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.2"
                    android:gravity="left|center"
                    android:text="知情同意签署日期："
                    android:textColor="@color/black_color" />

                <com.ukang.clinicaltrial.view.Mdate
                    android:id="@+id/Mdate"
                    android:layout_width="0.0dip"
                    android:layout_height="65dp"
                    android:layout_weight="1"
                    android:paddingLeft="60dp"
                    android:background="@drawable/bg_none"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.63"
                    android:gravity="right|center"
                    android:text="住院号/门诊号："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/patient_no"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_margin="1.0dip"
                    android:layout_weight="1.5"
                    android:ems="10"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.7"
                    android:gravity="left|center"
                    android:text="性别："
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:contentDescription="性别"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="center"
                        android:text="男"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="女"
                        android:textColor="@color/black_color" />
                </RadioGroup>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="1.5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.74"
                    android:gravity="right|center"
                    android:text="婚姻:"
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/marray"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:contentDescription="婚姻"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/married"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="已婚"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/marraying"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="50dp"
                        android:text="未婚"
                        android:textColor="@color/black_color" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:text="出生日期："
                    android:textColor="@color/black_color" />

                <com.ukang.clinicaltrial.view.Mdate
                    android:id="@+id/birthday"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:paddingLeft="30dp"
                    android:background="@drawable/bg_none"/>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.15"
                    android:gravity="right|center"
                    android:text="民族："
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/rb1"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.57"
                        android:checked="true"
                        android:text="汉"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/rb2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.42"
                        android:text="其他"
                        android:textColor="@color/black_color" />
                </RadioGroup>

                <EditText
                    android:id="@+id/nation"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_margin="2.0dip"
                    android:layout_weight="0.63"
                    android:gravity="center"
                    android:textColor="@color/black_color" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.70"
                    android:gravity="left|center"
                    android:text="职业："
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/job"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/grad1"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:text="体力劳动"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/grad2"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="脑力劳动"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/grad3"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:text="无业"
                        android:textColor="@color/black_color" />
                </RadioGroup>

                <View
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="5" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp"
            android:layout_margin="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:text="身高："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/height"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center" />

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:text="(cm)"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    style="@style/mItem_style"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="left|center"
                    android:text="体重："
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="1.0"
                    android:gravity="center" />
                <TextView
                    style="@style/mItem_style"
                    android:layout_width="0.0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:gravity="left|center"
                    android:text="(kg)"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="65dp" >

            <Button
                android:id="@+id/submit"
                android:layout_width="140.0dip"
                android:layout_height="70.0dip"
                android:background="@drawable/selector_btn"
                android:layout_centerHorizontal="true"
                android:text="提交"
                android:textColor="@color/white_color" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>