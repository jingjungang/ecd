                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:checked="true"
                android:gravity="center"
                android:text="不良事件"
                android:textColor="@color/black_color" />

            <RadioButton
                android:id="@+id/r3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="无"
                android:textColor="@color/black_color" />
        </RadioGroup>

        <Button
