                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/frg_17_7c"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center"
                        android:text="可能有关"
                        android:textColor="@color/black_color" />

