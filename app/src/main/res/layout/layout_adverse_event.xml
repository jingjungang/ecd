            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1.0dip"
            android:layout_weight="2.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
