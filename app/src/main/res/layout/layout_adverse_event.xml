                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="true"
                        android:gravity="left|center"
                        android:text="暂停用药 "
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/frg_17_6e"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
