<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff8f8f8"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <View
        style="@style/line_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_margin="1dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:text="实验中是否发生不良事件"
            android:textColor="@color/black_color" />

        <View
            style="@style/line_color"
            android:layout_width="1.0dip"
            android:layout_height="fill_parent" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="1.0dip"
            android:layout_weight="2.0"
            android:gravity="center"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/r3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:checked="true"
                android:gravity="center"
                android:text="无"
                android:textColor="@color/black_color" />

            <RadioButton
                android:id="@+id/r1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.33"
                android:gravity="center"
                android:text="严重不良事件"
                android:textColor="@color/black_color" />
        </RadioGroup>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5" />

        <Button
            android:id="@+id/submit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/selector_btn"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white_color" />
    </LinearLayout>

    <View
        style="@style/line_color"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <ScrollView
        android:id="@+id/Scorll_special"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="受严重不良事件的报告人"
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/f_17_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="报告时间"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <com.ukang.clinicaltrial.view.Mdate
                        android:id="@+id/f_17_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="严重不良事件名称（字迹清晰）"
                    android:textColor="@color/black_color" />

                <EditText
                    android:id="@+id/f_17_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SAE发生时间"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <com.ukang.clinicaltrial.view.Mdate
                        android:id="@+id/f_17_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center" >

                    <com.ukang.clinicaltrial.view.MobileTime
                        android:id="@+id/f_17_4_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SAE特点"
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/radioGroup_1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1.0dip"
                    android:layout_weight="2.5"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/f_17_5a"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="阵发性 (次数)"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/f_17_5a_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:inputType="number"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/f_17_5b"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="false"
                        android:gravity="center"
                        android:text="持续性"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/f_17_5c"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="其他"
                        android:textColor="@color/black_color" />
                </RadioGroup>

                <EditText
                    android:id="@+id/f_17_5d"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5" />
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SAE情况"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/f_17_6a"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="导致住院"
                            android:textColor="@color/black_color" />

                        <CheckBox
                            android:id="@+id/f_17_6b"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="延迟住院时间"
                            android:textColor="@color/black_color" />

                        <CheckBox
                            android:id="@+id/f_17_6c"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="伤残"
                            android:textColor="@color/black_color" />

                        <CheckBox
                            android:id="@+id/f_17_6d"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="功能障碍"
                            android:textColor="@color/black_color" />

                        <CheckBox
                            android:id="@+id/f_17_6e"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="影响工作能力 "
                            android:textColor="@color/black_color" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" >

                        <CheckBox
                            android:id="@+id/f_17_6f"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="导致先天畸形"
                            android:textColor="@color/black_color" />

                        <CheckBox
                            android:id="@+id/f_17_6g"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="危机生命或死亡"
                            android:textColor="@color/black_color" />

                        <CheckBox
                            android:id="@+id/f_17_6h"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="其他"
                            android:textColor="@color/black_color" />

                        <EditText
                            android:id="@+id/f_17_6i"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:textColor="@color/black_color" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="纠正治疗"
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/radioGroup_3"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1.0dip"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/f_17_7a"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="无"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/f_17_7b"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="false"
                        android:gravity="center"
                        android:text="有"
                        android:textColor="@color/black_color" />
                </RadioGroup>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" />
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="对实验用药采取的措施"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <RadioGroup
                        android:id="@+id/radioGroup_4"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1.0dip"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/f_17_8a"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="剂量不变"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_8b"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="减少剂量"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_8c"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="暂停用药"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_8d"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="停止用药"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_8e"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="实验用药已结束 "
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_8f"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="其他"
                            android:textColor="@color/black_color" />

                        <EditText
                            android:id="@+id/f_17_8f_text"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:maxLength="100"
                            android:singleLine="true"
                            android:textColor="@color/black_color" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="与实验药物的关系"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal" >

                    <RadioGroup
                        android:id="@+id/radioGroup_5"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1.0dip"
                        android:layout_weight="2.5"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/f_17_9a"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="肯定相关"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_9b"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="很可能相关"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_9c"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="可能相关"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_9d"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="可疑"
                            android:textColor="@color/black_color" />

                        <RadioButton
                            android:id="@+id/f_17_9e"
                            android:layout_width="0.0dip"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:checked="false"
                            android:gravity="center"
                            android:text="不可能相关 "
                            android:textColor="@color/black_color" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SAE转归"
                    android:textColor="@color/black_color" />

                <RadioGroup
                    android:id="@+id/radioGroup_6"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RadioButton
                        android:id="@+id/f_17_10a"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="症状消失"
                        android:textColor="@color/black_color" />

                    <EditText
                        android:id="@+id/f_17_10a_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="后遗症" />

                    <RadioButton
                        android:id="@+id/f_17_10b"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:checked="false"
                        android:gravity="center"
                        android:text="症状持续"
                        android:textColor="@color/black_color" />

                    <RadioButton
                        android:id="@+id/f_17_10c"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="死亡"
                        android:textColor="@color/black_color" />

                    <com.ukang.clinicaltrial.view.Mdate
                        android:id="@+id/f_17_10c_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </RadioGroup>
            </LinearLayout>

            <View
                style="@style/line_color"
                android:layout_width="match_parent"
                android:layout_height="1dip" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="1dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="症状消失日期和时间（如果症状仍存在，请不要填写此栏）"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center" >

                    <com.ukang.clinicaltrial.view.Mdate
                        android:id="@+id/f_17_11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left|center" >

                    <com.ukang.clinicaltrial.view.MobileTime
