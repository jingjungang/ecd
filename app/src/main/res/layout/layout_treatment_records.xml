<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff8f8f8"
    android:gravity="top"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:background="@color/title2"
            android:orientation="horizontal" >

            <TextView
                style="@style/table_head"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20.0dip"
                android:layout_weight="1.0"
                android:gravity="left|center"
                android:text="针灸、康复物理治疗措施的记录"
                android:textColor="@color/white_color" />
        </LinearLayout>

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="1.针灸治疗"
                android:textColor="@color/black_color" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="4.0"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black_color" />
        </LinearLayout>

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:orientation="horizontal" >

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <RadioGroup
                android:id="@+id/radioGroup_1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="1.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/r0"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:checked="true"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@color/black_color" />

                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@color/black_color" />
            </RadioGroup>

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="每周频率"
                android:textColor="@color/black_color" />

            <EditText
                android:id="@+id/f_22_1"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@color/black_color" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:text="（次）"
                android:textColor="@color/black_color" />

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="每次治疗"
                android:textColor="@color/black_color" />

            <EditText
                android:id="@+id/f_22_2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:textColor="@color/black_color" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:text="小时"
                android:textColor="@color/black_color" />

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="2.康复物理治疗"
                android:textColor="@color/black_color" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="4.0"
                android:gravity="center"
                android:text=""
                android:textColor="@color/black_color" />
        </LinearLayout>

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip"
            android:orientation="horizontal" >

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <RadioGroup
                android:id="@+id/radioGroup_2"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="1.0dip"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/r2"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:checked="true"
                    android:gravity="center"
                    android:text="否"
                    android:textColor="@color/black_color" />

                <RadioButton
                    android:id="@+id/r3"
                    android:layout_width="0.0dip"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="是"
                    android:textColor="@color/black_color" />
            </RadioGroup>

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="每周频率"
                android:textColor="@color/black_color" />

            <EditText
                android:id="@+id/f_22_3"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="2"
                android:textColor="@color/black_color" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:text="（次）"
                android:textColor="@color/black_color" />

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="每次治疗"
                android:textColor="@color/black_color" />

            <EditText
                android:id="@+id/f_22_4"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:textColor="@color/black_color" />

            <View
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="left|center"
                android:text="小时"
                android:textColor="@color/black_color" />

            <View
                style="@style/line_color"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent" />
        </LinearLayout>

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <View
            style="@style/line_color"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="70.0dip" >

            <Button
                android:id="@+id/submit"
                android:layout_width="140.0dip"
                android:layout_height="70.0dip"
                android:layout_centerInParent="true"
                android:layout_marginTop="20.0dip"
                android:background="@drawable/selector_btn"
                android:gravity="center"
                android:text="提交"
                android:textColor="@color/white_color" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>